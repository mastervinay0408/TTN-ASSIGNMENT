<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_add_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Fragment 1" />

            <Button
                android:id="@+id/btn_show_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Fragment 1" />

            <Button
                android:id="@+id/btn_hide_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hide Fragment 1" />

            <Button
                android:id="@+id/btn_remove_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove Fragment 1" />

            <Button
                android:id="@+id/btn_replace_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Replace Fragment 1 with Fragment 2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout1"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_add_fragment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Fragment 2" />

            <Button
                android:id="@+id/btn_show_fragment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Fragment 2" />

            <Button
                android:id="@+id/btn_hide_fragment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hide Fragment 2" />

            <Button
                android:id="@+id/btn_remove_fragment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove Fragment 2" />

            <Button
                android:id="@+id/btn_replace_fragment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Replace Fragment 2 with Fragment 1" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

    </FrameLayout>
</LinearLayout>